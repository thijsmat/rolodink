{
  "manifest_version": 2,
  "name": "Rolodink",
  "version": "1.0.3",
  "description": "Rolodink: your note layer on top of LinkedIn, your modern rolodex.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://www.linkedin.com/*",
    "https://api.rolodink.app/*"
  ],
  "browser_action": {
    "default_popup": "ui/dist/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "ui/dist/*"
  ],
  "browser_specific_settings": {
    "data_collection_permissions": {
      "collects_data": true,
      "data_types": [
        "browsing_activity"
      ],
      "purpose": "Store LinkedIn profile information in user's personal CRM database"
    }
  },
  "applications": {
    "gecko": {
      "id": "rolodink@rolodink.app",
      "strict_min_version": "109.0"
    }
  }
}

