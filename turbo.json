{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "../dist/**",
        "build/**"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "POSTGRES_URL",
    "POSTGRES_PRISMA_URL",
    "SUPABASE_URL",
    "POSTGRES_URL_NON_POOLING",
    "SUPABASE_JWT_SECRET",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DATABASE",
    "SUPABASE_SERVICE_ROLE_KEY",
    "POSTGRES_HOST",
    "SUPABASE_ANON_KEY",
    "DATABASE_URL",
    "DIRECT_URL",
    "RATE_LIMIT_MAX",
    "RATE_LIMIT_WINDOW_MS",
    "ALLOWED_ORIGINS",
    "VITE_SUPABASE_URL",
    "VITE_SUPABASE_ANON_KEY",
    "EMAIL_CONFIRMATION_REDIRECT_TO",
    "LINKEDIN_CLIENT_ID",
    "LINKEDIN_CLIENT_SECRET",
    "LINKEDIN_REDIRECT_URI"
  ]
}