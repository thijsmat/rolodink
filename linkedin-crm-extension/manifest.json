{
  "manifest_version": 3,
  "name": "Rolodink",
  "version": "1.0.8",
  "description": "Rolodink: your note layer on top of LinkedIn, your modern rolodex.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.rolodink.app/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/in/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "*.js",
        "*.css",
        "*.html",
        "index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}