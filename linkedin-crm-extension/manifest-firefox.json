{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.1.0",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "privacy_policy_url": "https://rolodink.app/privacy",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.rolodink.app/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/in/*",
        "https://linkedin.com/in/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "icons/*",
        "*.js",
        "*.css",
        "*.html",
        "index.html"
      ],
      "matches": [
        "https://www.linkedin.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "rolodink@rolodink.app",
      "strict_min_version": "115.0"
    }
  }
}