{
  "manifest_version": 2,
  "name": "Rolodink",
  "version": "1.0.8",
  "description": "Rolodink: your note layer on top of LinkedIn, your modern rolodex.",
  "privacy_policy_url": "https://rolodink.app/privacy",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "identity",
    "https://www.linkedin.com/*",
    "https://api.rolodink.app/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/in/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "assets/*",
    "icons/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "rolodink@rolodink.app",
      "strict_min_version": "109.0"
    }
  }
}